generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}

model User {
  id          Int         @id @default(autoincrement())
  email       String      @unique
  cpf         String      @unique
  phone       String      @unique
  name        String
  password    String     
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  role        Role        @relation(fields: [roleId], references: [id])
  roleId      Int
}

model Role {
  id          Int         @id @default(autoincrement())
  name        String    
  routines    String
  users       User[]
}
